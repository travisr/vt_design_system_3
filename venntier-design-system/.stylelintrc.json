{
  "extends": ["stylelint-config-standard-scss", "stylelint-prettier/recommended"],
  "rules": {
    "selector-class-pattern": null,
    "declaration-no-important": [
      true,
      {
        "message": "Avoid !important - use proper specificity or CSS custom properties"
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global", "host", "host-context", "ng-deep"]
      }
    ],
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": ["ng-deep"]
      }
    ],
    "no-descending-specificity": null,
    "scss/at-import-no-partial-leading-underscore": null,
    "scss/operator-no-newline-after": null,
    "value-keyword-case": [
      "lower",
      {
        "camelCaseSvgKeywords": true,
        "ignoreProperties": ["--md-sys-*"]
      }
    ],
    "property-no-vendor-prefix": [
      true,
      {
        "message": "Vendor prefixes are automatically added by the build process"
      }
    ],
    "at-rule-no-vendor-prefix": [
      true,
      {
        "message": "Vendor prefixes are automatically added by the build process"
      }
    ]
  },
  "ignoreFiles": [
    "node_modules/**",
    "dist/**",
    ".angular/**",
    "**/*.ts",
    "**/*.js",
    "projects/venntier/design-system/src/styles/tokens/**/*.scss",
    "projects/venntier/design-system/src/styles/themes/**/*.scss"
  ]
}