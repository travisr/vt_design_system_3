{
  "extends": ["stylelint-config-standard-scss", "stylelint-prettier/recommended"],
  "rules": {
    "selector-class-pattern": null,
    "declaration-no-important": [
      true,
      {
        "message": "Avoid !important - use proper specificity or CSS custom properties"
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global", "host", "host-context", "ng-deep"]
      }
    ],
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": ["ng-deep"]
      }
    ],
    "no-descending-specificity": null,
    "scss/at-import-no-partial-leading-underscore": null,
    "scss/operator-no-newline-after": null,
    "value-keyword-case": [
      "lower",
      {
        "camelCaseSvgKeywords": true,
        "ignoreProperties": ["--mat-sys-*"]
      }
    ],
    "property-no-vendor-prefix": [
      true,
      {
        "message": "Vendor prefixes are automatically added by the build process"
      }
    ],
    "at-rule-no-vendor-prefix": [
      true,
      {
        "message": "Vendor prefixes are automatically added by the build process"
      }
    ],
    "color-named": [
      "never",
      {
        "message": "Use design system tokens instead of named colors (e.g., var(--mat-sys-on-surface) instead of 'white')"
      }
    ],
    "color-no-hex": [
      true,
      {
        "message": "Use design system tokens instead of hex colors (e.g., var(--mat-sys-primary) instead of '#000000')"
      }
    ],
    "declaration-property-value-disallowed-list": {
      "color": [
        "/^(white|black|red|blue|green|yellow|orange|purple|pink|gray|grey)$/i",
        "/^#/",
        "/^rgb/",
        "/^hsl/"
      ],
      "background": [
        "/^(white|black|red|blue|green|yellow|orange|purple|pink|gray|grey)$/i",
        "/^#/",
        "/^rgb/",
        "/^hsl/"
      ],
      "background-color": [
        "/^(white|black|red|blue|green|yellow|orange|purple|pink|gray|grey)$/i",
        "/^#/",
        "/^rgb/",
        "/^hsl/"
      ],
      "border-color": [
        "/^(white|black|red|blue|green|yellow|orange|purple|pink|gray|grey)$/i",
        "/^#/",
        "/^rgb/",
        "/^hsl/"
      ],
      "border": [
        "/solid\\s+(white|black|red|blue|green|yellow|orange|purple|pink|gray|grey)$/i",
        "/solid\\s+#/",
        "/solid\\s+rgb/",
        "/solid\\s+hsl/"
      ]
    }
  },
  "ignoreFiles": [
    "node_modules/**",
    "dist/**",
    ".angular/**",
    "**/*.ts",
    "**/*.js",
    "projects/design-system/src/styles/tokens/**/*.scss",
    "projects/design-system/src/styles/themes/base/_custom-tokens.scss",
    "projects/design-system/src/styles/themes/_core-bulletproof.scss",
    "projects/design-system/src/styles/components/_icon.scss"
  ]
}
