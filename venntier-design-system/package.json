{
  "name": "venntier-design-system",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run build:lib && ng serve demo",
    "build": "npm run lint:all && npm run build:lib:only && npm run typecheck && npm run build:demo:only",
    "build:lib": "npm run lint:all && npm run build:lib:only",
    "build:lib:only": "ng build @venntier/design-system --configuration=production",
    "build:lib:watch": "ng build @venntier/design-system --watch",
    "build:demo:only": "ng build demo --configuration=production",
    "build:demo:pages": "npm run lint:all && npm run build:lib:only && ng build demo --configuration=production --base-href=/vt_design_system_3/",
    "build:ci": "npm run build",
    "serve:demo": "ng serve demo",
    "dev": "npm run build:lib && concurrently \"npm run build:lib:watch\" \"npm run serve:demo\"",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "audit:ng": "../.claude/scripts/ng-audit.sh .",
    "audit:ds": "../.claude/scripts/ds-audit.sh .",
    "audit:full": "../.claude/scripts/full-audit.sh .",
    "pack:lib": "cd dist/design-system && npm pack",
    "prepare": "husky",
    "lint:ts": "ng lint",
    "lint:scss": "stylelint \"**/*.scss\" --ignore-path .gitignore",
    "lint:all": "npm run lint:ts && npm run lint:scss",
    "format": "prettier --write \"**/*.{ts,html,scss,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,html,scss,json,md}\" --ignore-path .gitignore",
    "docker:build": "docker build -f Dockerfile -t venntier-demo:local .",
    "docker:run": "docker run -p 8080:80 venntier-demo:local",
    "docker:dev": "npm run build && npm run docker:build && npm run docker:run",
    "docker:clean": "docker rmi venntier-demo:local 2>/dev/null || true"
  },
  "lint-staged": {
    "*.{ts,html}": [
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.7",
    "@angular/cdk": "^20.1.5",
    "@angular/common": "^20.1.7",
    "@angular/compiler": "^20.1.7",
    "@angular/core": "^20.1.7",
    "@angular/forms": "^20.1.7",
    "@angular/material": "^20.1.5",
    "@angular/platform-browser": "^20.1.7",
    "@angular/platform-browser-dynamic": "^20.1.7",
    "@angular/router": "^20.1.7",
    "@fontsource/inter": "^5.2.6",
    "@fontsource/material-icons": "^5.2.5",
    "@fontsource/roboto": "^5.2.6",
    "material-icons": "^1.13.14",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.6",
    "@angular/cli": "^20.1.6",
    "@angular/compiler-cli": "^20.1.7",
    "@playwright/test": "^1.54.2",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "20.1.1",
    "concurrently": "^9.2.0",
    "eslint": "^9.29.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.5",
    "ng-packagr": "^20.1.0",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-prettier": "^5.0.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "8.34.1"
  }
}
